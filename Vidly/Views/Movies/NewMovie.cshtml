@model Vidly.ViewModels.MovieGenres
@{
    ViewBag.Title = "NewMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    var title = "New Movie";

    if (!(Model.Movie is null))
    {
        title = "Edit movie";
    }
}

<h2>@title</h2>

@using (Html.BeginForm("Save", "Movies", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Movie_ReleaseDate">Release Date</label>
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Movie_DateAdded">Date Added</label>
        @Html.TextBoxFor(m => m.Movie.DateAdded, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Movie_NumberInStock">Number in Stock</label>
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Movie_GenreId">Movie Genre</label>
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Movie.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

